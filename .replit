# Replit configuration for Simple Seed Organizer Landing Page
# This deploys the validation-landing subdirectory

# Run command - changes to subdirectory and starts Next.js
run = "cd experiments/simple-seed-organizer/prototype/validation-landing && npm install && npm run dev"
modules = ["python-3.11", "nodejs-20"]

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 5000

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Simple Seed Organizer Landing"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install && npm run dev -- -p 5000 -H 0.0.0.0"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Simple Seed Organizer Landing"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd experiments/simple-seed-organizer/landing && python -m http.server 3001"
waitForPort = 3001

[nix]
channel = "stable-25_05"
packages = ["nodejs"]

[agent]
expertMode = true
integrations = ["notion:1.0.0"]
