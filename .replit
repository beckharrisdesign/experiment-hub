# Replit configuration for Simple Seed Organizer Landing Page
# This deploys the validation-landing subdirectory

# Run command - changes to subdirectory and starts Next.js
run = "cd experiments/simple-seed-organizer/prototype/validation-landing && npm install && npm run dev"

# On boot - install dependencies in the subdirectory
onBoot = "cd experiments/simple-seed-organizer/prototype/validation-landing && npm install"

# Port configuration - maps internal port 3008 to external port 80
[[ports]]
localPort = 3008
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 5000

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start landing page"

[[workflows.workflow]]
name = "Start landing page"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd experiments/simple-seed-organizer/prototype/validation-landing && npm install && npm run dev -- -p 3008 -H 0.0.0.0"
waitForPort = 3008

[workflows.workflow.metadata]
outputType = "webview"

[nix]
channel = "stable-25_05"
packages = ["nodejs"]

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "cd experiments/simple-seed-organizer/prototype/validation-landing && npm install && npm run build && npm run start"]
build = ["sh", "-c", "cd experiments/simple-seed-organizer/prototype/validation-landing && npm install && npm run build"]
