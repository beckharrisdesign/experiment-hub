# Replit configuration for Simple Seed Organizer Landing Page
# This deploys the validation-landing subdirectory

# Run command - changes to subdirectory and starts Next.js
run = "cd experiments/simple-seed-organizer/prototype/validation-landing && npm install && npm run dev"

[[ports]]
localPort = 3008
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 5000

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install && npm run dev -- -p 5000 -H 0.0.0.0"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[nix]
channel = "stable-25_05"
packages = ["nodejs"]

[agent]
expertMode = true
